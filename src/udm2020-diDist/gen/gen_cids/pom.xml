<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>de.cismet</groupId>
        <artifactId>global-parent</artifactId>
        <version>2.0</version>
    </parent>

    <groupId>de.cismet.cids.custom.udm2020</groupId>
    <artifactId>udm2020-di-dist</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>UDM2020-di Distribution</name>
    <description>Generates a cids distribution</description>

    <dependencies>
        <dependency>
            <groupId>de.cismet.cids.custom.udm2020</groupId>
            <artifactId>cids-custom-udm2020-di</artifactId>
            <version>1.0-SNAPSHOT</version>
            <exclusions>
                <exclusion>
                    <groupId>com.oracle</groupId>
                    <artifactId>javafx</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>de.cismet.cids.custom.udm2020</groupId>
            <artifactId>cids-custom-udm2020-di-server</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>    
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>de.cismet.cids</groupId>
                <artifactId>cids-maven-plugin</artifactId>
                <version>2.1</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>generate-lib</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <vendor>cismet</vendor>
                    <homepage>http://www.cismet.de</homepage>
                    <codebase>http://localhost/</codebase>
                    <m2codebase>lib/m2</m2codebase>
                    <accountExtension>UDM2020-di</accountExtension>
                    <outputDirectory>../..</outputDirectory>
                    <dependencyConfiguration>
                        <dependencyEx>
                            <groupId>de.cismet.cids.custom.udm2020</groupId>
                            <artifactId>cids-custom-udm2020-di-server</artifactId>
                            <version>1.0-SNAPSHOT</version>
                            <generateJnlp>false</generateJnlp>
                            <additionalDependencies>
                                <dependency>
                                    <groupId>de.cismet.commons</groupId>
                                    <artifactId>cids-utils</artifactId>
                                    <version>2.0-SNAPSHOT</version>
                                    <exclusions>
                                        <exclusion>
                                            <groupId>de.cismet.cids</groupId>
                                            <artifactId>cids-server</artifactId>
                                        </exclusion>
                                        <exclusion>
                                            <groupId>org.slf4j</groupId>
                                            <artifactId>*</artifactId>
                                        </exclusion>
                                        <exclusion>
                                            <groupId>de.cismet.commons</groupId>
                                            <artifactId>cismet-gui-commons</artifactId>
                                        </exclusion>
                                    </exclusions>
                                </dependency>
                            </additionalDependencies>
                            <starterConfiguration>
                                <localConfiguration>
                                    <jarNames>
                                        <jarName>res.jar</jarName>
                                        <jarName>resources.jar</jarName>
                                    </jarNames>
                                </localConfiguration>
                                <mainClass>de.cismet.cids.admin.serverManagement.HeadlessServerConsole</mainClass>
                            </starterConfiguration>
                        </dependencyEx>
                        <dependencyEx>
                            <groupId>de.cismet.cids.custom.udm2020</groupId>
                            <artifactId>cids-custom-udm2020-di</artifactId>
                            <version>1.0-SNAPSHOT</version>
                            <generateJnlp>true</generateJnlp>
                            <starterConfiguration>
                                <localConfiguration>
                                    <jarNames>
                                        <jarName>res.jar</jarName>
                                        <jarName>navigatorImages.jar</jarName>
                                    </jarNames>
                                </localConfiguration>
                                <mainClass>Sirius.navigator.Navigator</mainClass>
                                <arguments>
                                    <argument>client/udm2020-di/config/log4j.properties</argument>
                                    <argument>client/udm2020-di/config/navigator.cfg</argument>
                                    <argument>client/udm2020-di</argument>
                                    <argument>client/udm2020-di/plugins</argument>
                                    <argument>client/udm2020-di/search</argument>
                                </arguments>															
                                <properties>
                                    <property>
                                        <name>jnlp.directory.extension</name>
                                        <value>Udm2020di</value>
                                    </property>
                                    <property>
                                        <name>jnlp.user.language</name>
                                        <value>de</value>
                                    </property>
                                    <property>
                                        <name>jnlp.user.variant=</name>
                                        <value>udm2020-di</value>
                                    </property>
                                    <property>
                                        <name>jnlp.user.country</name>
                                        <value>AT</value>
                                    </property>
                                </properties>
                            </starterConfiguration>
                        </dependencyEx>                     
                    </dependencyConfiguration>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
